{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clone Project",
      "type": "shell",
      "command": "git clone git@git.drupal.org:project/${input:project}.git",
      "problemMatcher": [],
      "options": {
        "cwd": "/var/www/html/${input:project_type}"
      },
      "presentation": {
        "focus": true,
      },
    },
    {
      "label": "Generate Core Patch",
      "type": "shell",
      "command": "/workspaces/vscode-drupal/.devcontainer/scripts/generate_patch.sh",
      "problemMatcher": [],
      "options": {
        "cwd": "/var/www/html/${input:project}"
      },
      "presentation": {
        "focus": true,
      },
    },
    {
      "label": "Install Drupal",
      "type": "shell",
      "command": "./vendor/bin/drush site-install --db-url=mysql://drupal:drupal@db:3306/drupal --account-pass=admin",
      "problemMatcher": [],
      "options": {
        "cwd": "/var/www/html"
      },
      "presentation": {
        "focus": true,
      },
    },
    {
      "label": "Run Drush Command",
      "type": "shell",
      "command": "./vendor/bin/drush ${input:command}",
      "problemMatcher": [],
      "options": {
        "cwd": "/var/www/html"
      },
      "presentation": {
        "focus": true,
      },
    },
  ],
  "inputs": [
    {
      "id": "command",
      "description": "Drush Command",
      "default": "status",
      "type": "promptString"
    },
    {
      "id": "project",
      "description": "Drupal Project",
      "default": "require_on_publish",
      "type": "promptString"
    },
    {
      "id": "project_type",
      "description": "Project Type",
      "type": "pickString",
      "default": "modules",
      "options": [
        "modules",
        "themes",
        "profiles"
      ]
    }
  ]
}
